@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Index";
}


<div class="mx-auto">
	<h1 class="my-5">Employees</h1>
	<a asp-action="Create"
	   class="btn btn-primary">Create Employee</a>
	
	@if (ViewBag.count > 0)
	{
	<a asp-action="Restore"
	   class="btn btn-secondary">Restore Employee</a>
	}



	<div class="card " style="width: 60rem;">
		<table class="table table-striped">
			<tr>
				<th>@Html.DisplayNameFor(x=>x.Name)</th>
				<th>@Html.DisplayNameFor(x => x.Salary)</th>
				<th>@Html.DisplayNameFor(x => x.isActive)</th>
				<th>Operations</th>

			</tr>	
				
		 @if (Model.Any())
		 {
			@* <div class="alert alert-success" role="alert"> *@
			@* 	@Model.Count() Employees Found *@
			@* </div> *@


			@foreach (var emp in Model)
			{
				<tr>
					<td>@emp.Name</td>

					<td>@emp.Salary</td>
					

				
					@if (emp.isActive)
					{
						<td>
							<span class="alert alert-success p-1 fs-6 align-items-center" role="alert">
								Active
							</span>
						</td>
					}
					else
					{
							<td><span class="alert alert-danger p-1 fs-6 align-items-center" role="alert"> Non-Active</span></td>
					}
					<td>
					    <a asp-action="Details" asp-route-id="@emp.EmployeeId" class="btn btn-info">more details</a>
					    <a asp-action="Edit"  asp-route-id="@emp.EmployeeId" class="btn btn-secondary">Edit</a>
					    <a asp-action="Delete"  asp-route-id="@emp.EmployeeId" class="btn btn-danger">Delete</a>
						<a asp-action="SoftDelete" asp-route-id="@emp.EmployeeId" class="btn btn-danger">Soft Delete</a>
					</td>
				</tr>
			}
	     }
				else
				{
					<div class="alert alert-danger" role="alert">
						No Employees Found
					</div>
				}
		
		</table>

	</div>


</div>


