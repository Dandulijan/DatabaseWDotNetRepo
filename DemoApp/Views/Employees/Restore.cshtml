@model IEnumerable<Employee>

@{
    ViewData["Title"] = "Restore";
}

<h1>Restore</h1>
<div class="mx-auto" >


	<div class="card " style="width: 60rem;">
		<table class="table table-striped">
			<tr>
				<th>@Html.DisplayNameFor(x => x.Name)</th>
				<th>@Html.DisplayNameFor(x => x.Salary)</th>
				<th>@Html.DisplayNameFor(x => x.isActive)</th>
			

			</tr>
			@if (Model.Any())
			{
				<form asp-action="RestoreEmp" asp-controller="Employees" method="post" class="mt-4">
				
				<button type="submit" class="btn btn-success">Restore Employee</button>
				</form>
	@foreach (var emp in Model)
	{
		<tr>
			<td>@emp.Name</td>

			<td>@emp.Salary</td>



			@if (emp.isActive)
			{
				<td>
					<span class="alert alert-success p-1 fs-6 align-items-center" role="alert">
						Active
					</span>
				</td>
			}
			else
			{
				<td><span class="alert alert-danger p-1 fs-6 align-items-center" role="alert"> Non-Active</span></td>
			}
		
		</tr>
	}

}
else
{
	<div class="alert alert-danger" role="alert">
		No Employees Found
	</div>
}



	</table>
</div>
</div>
